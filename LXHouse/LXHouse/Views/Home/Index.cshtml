@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide">
    <!-- 轮播（Carousel）指标 -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- 轮播（Carousel）项目 -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="/Picture/front.jpg" alt="First slide">
            <div class="carousel-caption col-md-4 col-lg-4" style="float:left;text-align: left; background-color: rgba(0, 0, 0,0.6); ">
                <h1 style="color:aliceblue;padding-left:1em">乐享房产</h1>
                <p style="color: aliceblue; padding-left: 2em" class="lead">让房屋交易更安全</p>
                <p style="padding-left: 3em"><button type="button" class="btn btn-danger">点此进入</button></p>
            </div>
        </div>
        <div class="item">
            <img src="/Picture/front.jpg" alt="Second slide">
        </div>
        <div class="item">
            <img src="/Picture/front.jpg" alt="Third slide">
        </div>
    </div>
    <!-- 轮播（Carousel）导航 -->
    <a class="carousel-control left" role="button" href="#myCarousel"
       data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">上一页</span></a>
    <a class="carousel-control right" role="button" href="#myCarousel"
       data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">下一页</span></a>
</div> 

